{ lib, ... }:
{
  # https://starship.rs/
  programs.starship = {
    enable = true;
    enableZshIntegration = true;
    enableBashIntegration = true;
    settings = {
      add_newline = false;
      format = lib.concatStrings [
        "$username"
        "$hostname"
        "$directory"
        "$git_branch"
        "$git_state"
        "$git_status"
        "$nix_shell"
        "$container"
        "\n$character"
      ];
      right_format = "$cmd_duration$time";
      username = {
        disabled = false;
        show_always = true;
        style_user = "green bold";
      };
      character = {
        success_symbol = "[‚Ü≥](bold green)";
        error_symbol = "[‚úó](bold red)";
      };
